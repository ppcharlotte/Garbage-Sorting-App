<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fluffy" />

        <TextView
            android:id="@+id/record_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Record"
            android:textColor="@color/black"
            app:fontFamily="@font/quicksand_medium"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-05-07"
            android:textColor="@color/black"
            app:fontFamily="@font/quicksand_medium"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/record_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:text="Play with balls"
        android:textColor="@color/black"
        app:fontFamily="@font/quicksand"
        android:textSize="15sp" />
    
    <ImageView
        android:id="@+id/record_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cat" />

</LinearLayout>